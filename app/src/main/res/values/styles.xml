<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/gray600</item>
        <item name="colorPrimaryDark">@color/gray600Dark</item>
        <item name="colorAccent">@color/blue800Dark</item>
    </style>

    <style name="AppTheme.Blue">
        <item name="colorPrimary">@color/blue800</item>
        <item name="colorPrimaryDark">@color/blue800Dark</item>
        <item name="colorAccent">@color/gray600</item>

        <item name="cryptobox_rail">@drawable/cryptobox_rail_blue</item>
        <item name="safe_zone">@drawable/button_safe_zone_blue</item>
    </style>

    <style name="AppTheme.Red">
        <item name="colorPrimary">@color/red800</item>
        <item name="colorPrimaryDark">@color/red800Dark</item>
        <item name="colorAccent">@color/gray600</item>

        <item name="cryptobox_rail">@drawable/cryptobox_rail_red</item>
        <item name="safe_zone">@drawable/button_safe_zone_red</item>
    </style>

</resources>
