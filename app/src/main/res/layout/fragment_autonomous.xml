<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/cryptobox"
        layout="@layout/layout_cryptobox"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toTopOf="@+id/jewel_set"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/jewel_set"
        layout="@layout/layout_jewel_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/cryptobox" />

    <ImageButton
        android:id="@+id/safe_zone"
        android:layout_width="91dp"
        android:layout_height="73dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/safe_zone_button"
        android:scaleType="fitXY"
        android:tag="@string/safe_zone"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/jewel_set"
        app:layout_constraintEnd_toEndOf="@+id/cryptobox"
        app:layout_constraintTop_toTopOf="@+id/jewel_set"
        app:srcCompat="?safe_zone" />

    <ImageButton
        android:id="@+id/key0"
        android:layout_width="44dp"
        android:layout_height="24dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/key_0"
        android:tag="@string/key_0"
        app:layout_constraintStart_toStartOf="@+id/cryptobox"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/button_key" />

    <ImageButton
        android:id="@+id/key1"
        android:layout_width="44dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/key_1"
        android:tag="@string/key_1"
        app:layout_constraintEnd_toEndOf="@id/cryptobox"
        app:layout_constraintStart_toStartOf="@id/cryptobox"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/button_key" />

    <ImageButton
        android:id="@+id/key2"
        android:layout_width="44dp"
        android:layout_height="24dp"
        android:layout_marginEnd="42dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/key_2"
        android:tag="@string/key_2"
        app:layout_constraintEnd_toEndOf="@+id/cryptobox"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/button_key" />


</android.support.constraint.ConstraintLayout>